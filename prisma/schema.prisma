generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_SUPABASE_URL")
}

model Empresa {
  id           Int      @id @default(autoincrement())
  nomeFantasia String
  razaoSocial  String
  setor        String?
  descricao    String?
  cidade       String?
  uf           String?
  tags         String?
  createdAt    DateTime @default(now())

  @@map("empresas") // garante o nome exato da tabela no banco
}